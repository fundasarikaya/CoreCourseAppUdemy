@model CourseApp.Models.StudentCourseVModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="m-4">
    <div class="bg-success text-white p-4">
        Students & Courses
    </div>
    <h3>Courses</h3>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Courses?.Count() > 0)
            {
                @foreach (var course in Model.Courses)
                {
            <tr>
                <td>@course.Name</td>
                <td>@course.Price</td>
                <td>
                    @(string.Join(", ", course.StudentCourses.Select(i => i.Student.Name)))

                </td>
                <td></td>
            </tr>

                }

            }
            else
            {
                <tr>
                    <td colspan="3">No Courses</td>
                </tr>
            }
        </tbody>
    </table>
    <hr />
    <h3>Students</h3>
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Name</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Students?.Count() > 0)
            {
                @foreach (var student in Model.Students)
                {
            <tr>
                <td>@student.Name</td>
                <td>
                    @(string.Join(", ",student.StudentCourses.Select(i=>i.Course.Name)))
                </td>
                <td></td>
                <td>
                    <a asp-action="EditStudent" asp-route-id="@student.Id" class="btn btn-info">Edit</a>
                </td>
            </tr>

                }

            }
            else
            {
                <tr>
                    <td colspan="3">No Studens</td>
                </tr>
            }
        </tbody>
    </table>
    </div>
