@*
    InstructorEdit Partial View suan bu sayfa
*@
@model CourseApp.Models.Instructor
@{
    int counter = 0;
}
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Name" />
    @foreach (var course in Model.Courses)
    {
        <div class="row my-2">
            <input type="hidden" name="Courses[@counter].Id" value="@course.Id" />
            <input type="hidden" name="Courses[@counter].Description" value="@course.Description" />
            <input type="hidden" name="Courses[@counter].isActive" @(Html.Raw(course.isActive ? "value=\"true\"" : "value=\"false\"")) />
            <input type="hidden" name="Courses[@counter].Name" class="form-control" value="@course.Name" />
            <input type="hidden" name="Courses[@counter].Price" class="form-control" value="@course.Price" />
        </div>
        { counter++; }
    }
    <div class="row my-2">
        <div class="col">
            <input type="text" name="Courses[@counter].Name" class="form-control" />
        </div>
        <div class="col">
            <input type="text" name="Courses[@counter].Price" class="form-control" />
        </div>
    </div>

    <div class="row mt-2">
        <div class="col text-center">
            <button type="submit" class="btn btn-success">Submit</button>
            <a asp-action="Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>
</form>